<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textBold" parent="android:Widget.EditText">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="underline">
        <item name="android:background">@drawable/underline</item>
    </style>
    <style name="vertical_line">
        <item name="android:background">@drawable/vertical_line</item>
    </style>
    <style name="UpbitSwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
    </style>
    <style name="UpbitKeyTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="boxStrokeColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="UpbitTextTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="UpbitSubTextTheme" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/switchTrackDark</item>
    </style>
    <style name="UpbitButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/itemTextColor</item>
    </style>
    <style name="UpbitButtonThemeCancel" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/itemTextColor</item>
    </style>
    <!--<style name="splashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:gravity">center</item>
    </style>-->
    <style name="settingDialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="tab_textSize" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="subTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/subTitle</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--차트 버튼-->
    <style name="unitButtons" parent="Widget.AppCompat.ActionButton">
        <item name="android:textSize">8sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--자동매매 입력버튼-->
    <style name="autoTradingEditTextLeft" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/left_empty_rect</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textCursorDrawable">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="autoTradingEditTextRight" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/right_empty_rect</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textCursorDrawable">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <!--바텀시트 라운드 코너-->
    <style name="bottomSheet" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_rect</item>
    </style>
    <!--+, - 버튼-->
    <style name="autoTradingTextViewPlusMinus" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/thin_border_rect</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textCursorDrawable">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">9dp</item>
    </style>
    <!--마커-->
    <style name="customMarker" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/rounded_black_rect</item>
    </style>
</resources>