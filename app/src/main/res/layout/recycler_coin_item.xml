<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainInfor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/underline"
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="1"
        style="@style/underline"/>
    <TextView
        android:id="@+id/coinNameKor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart" />
    <TextView
        android:id="@+id/trade_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/coinNameKor"
        app:layout_constraintWidth_percent="0.25"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"/>
    <TextView
        android:id="@+id/change_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/trade_price"
        app:layout_constraintWidth_percent="0.2"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"/>
    <TextView
        android:id="@+id/acc_trade_price_24h"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/change_rate"
        app:layout_constraintWidth_percent="0.25"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"/>
    <TextView
        android:id="@+id/marketName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/subTitle"
        app:layout_constraintTop_toBottomOf="@id/coinNameKor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="1"
        android:textAlignment="textStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>