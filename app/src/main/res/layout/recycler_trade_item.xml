<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainInfor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">
    <TextView
        android:id="@+id/underline"
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="1"
        style="@style/underline"/>
    <LinearLayout
        android:id="@+id/trades_created"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trades_created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/trades_created_at_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/trades_market"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/trades_created"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="0.8"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAlignment="gravity"/>
    <TextView
        android:id="@+id/trades_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/trades_market"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.8"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAlignment="gravity"/>
    <TextView
        android:id="@+id/trades_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/trades_side"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.8"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAlignment="gravity"/>
    <TextView
        android:id="@+id/trades_funds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/underline"
        app:layout_constraintLeft_toRightOf="@+id/trades_price"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.8"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAlignment="gravity"/>
</androidx.constraintlayout.widget.ConstraintLayout>